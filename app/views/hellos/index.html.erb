<h1>Listing hellos</h1>

<table>
  <tr>
    <th>Greet</th>
    <th>Language</th>
    <th>Country</th>
    <th>Memo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hellos.each do |hello| %>
  <tr>
    <td><%= hello.greet %></td>
    <td><%= hello.language %></td>
    <td><%= hello.country %></td>
    <td><%= hello.memo %></td>
    <td><%= link_to 'Show', hello %></td>
    <td><%= link_to 'Edit', edit_hello_path(hello) %></td>
    <td><%= link_to 'Destroy', hello, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

